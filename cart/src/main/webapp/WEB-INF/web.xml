<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <servlet>
        <servlet-name>listbook</servlet-name>
        <servlet-class>cn.free.web.controller.ListBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>listbook</servlet-name>
        <url-pattern>/book/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>buy</servlet-name>
        <servlet-class>cn.free.web.controller.BuyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>buy</servlet-name>
        <url-pattern>/book/buy</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>cn.free.web.controller.DeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/book/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>clear</servlet-name>
        <servlet-class>cn.free.web.controller.ClearCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>clear</servlet-name>
        <url-pattern>/book/clear</url-pattern>
    </servlet-mapping>
</web-app>
